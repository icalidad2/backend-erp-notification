{
  "manifest_version": 3,
  "name": "AppSheet Notify",
  "version": "1.0",
  "description": "Notificaciones en tiempo real desde AppSheet usando WebSockets y un popup personalizado.",

  "permissions": ["notifications", "alarms", "storage", "sidePanel"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "icon.png",
    "open_in_side_panel": true
  },

  "icons": {
    "128": "icon.png"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
